<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div id="jumbo-top">
            <h1 id="jumbo-header">Mongo NY Times Scraper</h1>
            <p id="jumbo-p">This app will scrape the top stories from NYT and allowed you
                <br/>to take notes for articles that you have saved</p>

            <br/>
            <form>
                <a class="btn btn-lg btn-primary" href="/" role="button">Back &raquo;</a>
            </form>
            </p>
        </div>
    </div>
    <!-- End of Jumbotron -->

{{#each saved}}
<div class="story-body" id={{this._id}}>
    <h2>
        <a href="{{this.link}}" target="_blank">{{this.title}}</a>
        <form action="/save/{{this._id}}" method="POST">
            <button type="submit" class="status btn btn-lg btn-primary" value="{{this.status}}">{{this.status}}</button>
            <button type="button" class="addnote-button btn btn-lg btn-primary" value="{{this._id}}">Edit Note</button>
        </form>
    </h2>
    <summary>{{this.summary}}</summary>
    <img class="media" src="{{this.img}}">
</div>
{{/each}}